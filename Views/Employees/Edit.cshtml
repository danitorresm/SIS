@model Employe
@{
    ViewData["Title"] = "Editar Empleado";
}

<h1>Datos para @ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-8 border justify-content-between"> 
        <form asp-action="Edit" method="post">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Nombres </label>
                <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name">
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Apellidos</label>
                <input type="text" class="form-control" id="LastName" name="LastName" value="@Model.LastName">
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Cedula</label>
                <input type="text" class="form-control" id="Cedula" name="Cedula" value="@Model.Cedula">
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Email</label>
                <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email">
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Telefono</label>
                <input type="text" class="form-control" id="Phone" name="Phone" value="@Model.Phone">
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Estado</label>
                <select name="Status" id="Status" class="form-control">
                    <option selected value="@Model.Status"></option>
                    <option value="Activo">Activo</option>
                    <option value="Inactivo">Inactivo</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Actualizar Informacio</button>
        </form>       
    </div>
</div>